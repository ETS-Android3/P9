<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.propertydetail.view.PropertyDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_property_detail_bottom_navigation_view">
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/property_detail_frame_title"
                style="@style/TextviewStyle.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_detail_title"
                 />

            <TextView
                android:id="@+id/property_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_address"
                style="@style/TextviewStyle.Label"/>

            <TextView
                android:id="@+id/property_detail_address_value"
                style="@style/TextviewStyle.Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_address_value"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/property_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_price"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_prive_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_price_value"
                style="@style/TextviewStyle.Value"/>


            <TextView
                android:id="@+id/property_detail_surface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_surface"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_surface_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_surface_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_description"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_description_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_description_value"
                style="@style/TextviewStyle.Value"/>
            <TextView
                android:id="@+id/property_detail_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_available"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_available_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_available_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_point_of_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_point_of_interest"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_point_of_interest_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_point_of_interest_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_entry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_entry_date"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_entry_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_entry_date_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_sale_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_sale_date"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_sale_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_sale_date_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_agent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_agent_name"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_agent_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_agent_name_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_agent_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_agent_email"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_agent_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_agent_email_value"
                style="@style/TextviewStyle.Value"/>
            <TextView
                android:id="@+id/property_detail_agent_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_agent_phone"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_agent_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_agent_phone_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_category"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_category_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_category_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_type"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_type_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_type_value"
                style="@style/TextviewStyle.Value"/>

            <TextView
                android:id="@+id/property_detail_photo_legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_photo_legend"
                style="@style/TextviewStyle.Label"/>
            <TextView
                android:id="@+id/property_detail_photo_legend_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/property_photo_legend_value"
                style="@style/TextviewStyle.Value"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/fragment_property_detail_bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/fragment_property_detail_bottom_navigation_menu"
        style="@style/BottomNavigation"/>
</androidx.constraintlayout.widget.ConstraintLayout>

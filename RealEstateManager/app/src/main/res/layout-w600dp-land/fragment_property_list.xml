<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.propertylist.view.PropertyListFragment">
    <!-- TODO: Update blank fragment layout -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_property_list_recyclerview"
        tools:listitem="@layout/row_property_list"
        android:scrollbars="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"

        app:layout_constraintHorizontal_weight="4"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment_container_view"

        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/fragment_property_view_vertical_line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/places_autocomplete_search_hint"
        app:layout_constraintEnd_toEndOf="@+id/fragment_property_list_recyclerview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        tools:layout="@layout/fragment_property_detail"
        android:id="@+id/fragment_container_view"
        android:name="androidx.navigation.fragment.NavHostFragment"

        app:layout_constraintHorizontal_weight="8"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_property_list_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:navGraph="@navigation/nav_graph_detail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
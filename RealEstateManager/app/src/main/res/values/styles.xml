<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="TextviewStyle" parent="@android:style/Widget.TextView">
    </style>
    <style name="TextviewStyle.Title">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginTop">@dimen/default_large_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_large_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
    </style>

    <style name="TextviewStyle.Label">
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_small_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
    </style>

    <style name="TextviewStyle.Value">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">@dimen/default_small_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
    </style>
    <style name="TextviewStyle.Value.Small">
        <item name="android:textSize">14dp</item>
    </style>
    <style name="TextviewStyle.Value.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextviewStyle.ThreeTextLine1">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">@dimen/three_text_line1_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>
    <style name="TextviewStyle.ThreeTextLine2">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/three_text_line2_text_size</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>
    <style name="TextviewStyle.ThreeTextLine3">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/three_text_line3_text_size</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="SwitchMaterialStyle">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="BottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
<!--        <item name="android:background">@color/indigo</item>-->
<!--        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>-->
<!--        <item name="itemIconTint">@color/navigation_bar_txt_color</item>-->
<!--        <item name="itemTextColor">@color/navigation_bar_txt_color</item>-->
<!--        <item name="paddingStart">@dimen/bottom_navigation_padding</item>-->
<!--        <item name="paddingEnd">@dimen/bottom_navigation_padding</item>-->
        <item name="colorPrimary">@color/white</item>
        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

<!--
        parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
-->
    <style name="My_TextInputLayoutStyle"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>
    <style name="My_TextInputLayoutDropdownStyle"
        parent = "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="ImageButtonIconOnlyStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:background">@color/primaryColor</item>
    </style>


</resources>
